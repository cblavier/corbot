source 'https://rubygems.org' do
  ruby '2.7.2'

  gem 'activerecord'
  gem 'jbuilder'
  gem 'pg'
  gem 'puma'
  gem 'rake'
  gem 'sinatra'
  gem 'sinatra-activerecord'
  gem 'sinatra-contrib'

  group :development do
    gem 'rubocop', require: false
  end

  group :test do
    gem 'database_cleaner'
    gem 'rack-test'
    gem 'rspec'
    gem 'simplecov', '0.17.1', require: false
    gem 'simplecov-console', require: false
    gem 'vcr'
    gem 'webmock'
  end
end
